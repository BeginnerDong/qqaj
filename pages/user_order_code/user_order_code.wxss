@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#f7f7f7;
}
.product{
	border-bottom:solid 1px #e0e0e0;
}
.product_box{
	height:230rpx;
	border-bottom:solid 1px #e0e0e0;
}
.product_detail{
	width:100%;
	height:140rpx;
}
.product_left{
	width:27.5%;
	height:156rpx;
}
.product_left image{
	width:156rpx;
	height:156rpx;
}
.product_right{
	width:72.5%;
	height:156rpx;
}
.order_handle{
	width:100%;
	height:118rpx;
	border-top:solid 1px #e0e0e0;
}
.product_number{
	width:50%;
}
.product_price{
	width:50%;
	text-align:right;
}
.test{
