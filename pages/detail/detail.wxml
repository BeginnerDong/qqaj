          </swiper-item>
        </block>
      </swiper>
      <view class="dots"> 
      <block wx:for="{{web_sliderData.mainImg}}" wx:key="index"> 
        <view class="dot{{index == swiperIndex ? ' active' : ''}}"></view> 
      </block> 
    </view>
    </view>
</view>

